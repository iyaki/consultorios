#!/usr/bin/env bash

CODE_DIRECOTRY='src/'

SCRIPT_DIR="$(dirname $(realpath "$0"))"

if [ ! -d "$SCRIPT_DIR/../vendor" ]
then
  "$SCRIPT_DIR/setup"
fi

paratest \
    --coverage-text \
    --passthru="'--prepend' '/root/.composer/vendor/autoload.php' '--do-not-cache-result'" \
    --functional \
    $@
