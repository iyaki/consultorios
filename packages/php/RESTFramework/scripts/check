#!/usr/bin/env bash

CODE_DIRECOTRY='src/'

SCRIPT_DIR="$(dirname $(realpath "$0"))"

NAMESPACE="$(basename $(realpath "$SCRIPT_DIR/../"))"
source "$SCRIPT_DIR/../../../bash/ci_utils.sh"

source "$SCRIPT_DIR/../../../bash/php_utils.sh"

cd "$SCRIPT_DIR/../"

php-ci-setup "$SCRIPT_DIR"

check-conflicts &

commented-code "$CODE_DIRECOTRY" &

file-class-name "$CODE_DIRECOTRY" &

multi-classes "$CODE_DIRECOTRY" &

check-var-dump &

coding-standars &

unused-packages \
  --excludePackage=mezzio/mezzio-cors \
  --excludePackage=mezzio/mezzio-fastroute \
  --excludePackage=mezzio/mezzio-helpers \
  --excludePackage=mezzio/mezzio &

find-transitive-depndencies &

find-magic-numbers \
  --exclude-path="Clockwork/" \
  -- "$CODE_DIRECOTRY" &

find-copy-pasted-code "$CODE_DIRECOTRY" &

static-analysis &

unit-tests &

wait

remake-autoloader

show_summary

exit $EXIT_STATUS
